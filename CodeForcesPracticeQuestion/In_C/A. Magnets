#include <stdio.h>
#include <string.h>

int main()
{
    int n;
    scanf("%d",&n);

    char prev[3],curr[3];

    scanf("%s",prev);
    int groups=1;

    for(int i=2;i<=n;i++)
    {
        scanf("%s",curr);

        if (strcmp(prev,curr) !=0)
            groups++;

        strcpy(prev,curr);
    }

    printf("%d\n",groups);

    return 0;
}
